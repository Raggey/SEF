public class Sale {
	
	private int discount;
	private int productID;
	public Sale(int discount_amount, int product_id) {
		discount = discount_amount;
		productID = product_id;
	}
	
	public int ApplyDiscounts(int productPrice) {
		int newPrice;
		newPrice = productPrice*discount;
		return newPrice;
	}
	
	public int GetSaleAmount() {
		return discount;
	}
	
	public void SetSaleAmount(int newAmount) {
		discount = newAmount;
		return;
	}
}
